{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jester-vue",
  "version": "0.1.0",
  "identifier": "com.jester-vue.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Jester",
        "width": 800,
        "transparent": true,
        "height": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon-16.png",
      "icons/icon-128.png",
      "icons/icon-48.png",
      "icons/icon.ico"
    ]
  }
}
